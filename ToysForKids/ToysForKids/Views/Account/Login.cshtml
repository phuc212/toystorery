@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="../images/Background.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Login</h2>
                    <p>Welcome to the official Toys For Kids</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Login</h3>
                    <form method="post" asp-action="Login" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input__item">
                            <input type="text" placeholder="Email address" asp-for="Email">
                            <span class="icon_mail"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" placeholder="Password" asp-for="Password">
                            <span class="icon_lock"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label text-white">
                                <input class="form-check-input" asp-for="RememberPassword" /> Remeber Password
                            </label>
                        </div>
                        <button type="submit" class="site-btn">Login Now</button>
                    </form>
                    <a href="#" class="forget_pass">Forgot Your Password?</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Dont’t Have An Account?</h3>
                    <a asp-action="Register" asp-controller="Account" class="primary-btn">Register Now</a>
                </div>
            </div>
        </div>       
    </div>
</section>
<!-- Login Section End -->
