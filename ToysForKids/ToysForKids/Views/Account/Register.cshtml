@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}
<section class="normal-breadcrumb set-bg" data-setbg="../images/Background.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Login</h2>
                    <p>Welcome to the official Toys For Kids</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Register Section Begin -->
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Register</h3>
                    <form method="post" asp-action="Register" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input__item">
                            <input type="text" placeholder="Firstname" asp-for="Firstname">
                            <span class="icon_profile"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" placeholder="Lastname" asp-for="Lastname">
                            <span class="icon_profile"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" placeholder="Address" asp-for="Address">
                            <span class="icon_house"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" placeholder="Phone Number" asp-for="PhoneNumber">
                            <span class="icon_phone"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" placeholder="Email address" asp-for="Email">
                            <span class="icon_mail"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" placeholder="Password" asp-for="Password">
                            <span class="icon_lock"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" placeholder="Confirm Password" asp-for="ConfirmPassword">
                            <span class="icon_lock_alt"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="site-btn">Login Now</button>
                    </form>
                    <a href="#" class="forget_pass">Forgot Your Password?</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Already Have An Account?</h3>
                    <a asp-action="Login" asp-controller="Account" class="primary-btn">Login Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Register Section End -->
